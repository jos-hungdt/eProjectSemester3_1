@model eProjectSemester3_1.Areas.Admin.ViewModels.AdminCategoryEditViewModel
@{
    ViewBag.Title = "Edit Category";
}
@Html.Partial("_CategoryNavButtons")
<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        @using (Html.BeginForm("Edit", "AdminCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(false)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id);

            @Html.Partial("_CategoryFields", Model)

            <div class="submit-holder">
                <br />
                <input type="submit" class="btn-mvc-green btn-mvc-large" value="Update" />
            </div>
        }
    </div>
</div>