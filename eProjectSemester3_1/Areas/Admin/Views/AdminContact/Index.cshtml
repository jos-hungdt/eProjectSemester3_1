@model eProjectSemester3_1.Areas.Admin.ViewModels.AdminContactViewModel
@{
    ViewBag.Title = "Manage Contact";
}
<div class="panel">
    <div class="panel-heading">
        <h5>@ViewBag.Title</h5>
    </div>
    <div class="panel-content">
        <div id="container">
            <div class="tablescroll">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width:50px">Edit</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th style="width:50px">Staus</th>
                            <th style="width:150px">Create Date</th>
                            <th style="width:50px">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var it in Model.ListContact)
                        {
                        <tr>
                            <td>
                                <a href="@Url.Action("Edit", new { id = it.Id })" class="btn-mvc">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                            </td>
                            <td>@it.Name</td>
                            <td>@it.Phone</td>
                            <td>@it.Email</td>
                            <td>@it.Status.ToString().Replace("0", "Preprocessor").Replace("1", "Processing").Replace("2", "Completed")</td>
                            <td>@it.CreateDate.ToString("hh:mm dd/MM/yyyy")</td>
                            <td>
                                <a href="@Url.Action("Delete", new { id = it.Id })" class="btn-mvc">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

