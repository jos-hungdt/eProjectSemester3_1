@model eProjectSemester3_1.Application.Entities.MembershipUser

@{
    ViewBag.Title = Model.FullName + " Infomation";
}
<link href="~/Content/css/user.css" rel="stylesheet" />
<section class="border-top">
    <div class="container">
        <div class="page-title mrgt6x mrgb6x clearfix">
            <h4 class="page-name">@Html.DisplayFor(Model => Model.FullName)</h4>
            
        </div>
    </div>
</section>
<div class="container">
    <div id="user-profile-2" class="user-profile">
        <div class="tabbable">
            <ul class="nav nav-tabs padding-18">
                @*<li class="active">
                    <a data-toggle="tab" href="#home">
                        <i class="green ace-icon fa fa-user bigger-120"></i>
                        Profile
                    </a>
                </li>*@

                @*<li>
                    <a data-toggle="tab" href="#feed">
                        <i class="orange ace-icon fa fa-rss bigger-120"></i>
                        Activity Feed
                    </a>
                </li>*@


            </ul>

            <div class="tab-content no-border padding-24">
                <div id="home" class="tab-pane in active">
                    <div class="row">
                        <div class="col-xs-12 col-sm-3 center">
                            <span class="profile-picture">
                                <img class="editable img-responsive" alt=" Avatar" id="avatar2" src="@Html.DisplayFor(Model => Model.Avatar)"/>
                            </span>

                            <div class="space space-4"></div>

                           
                        </div><!-- /.col -->

                        <div class="col-xs-12 col-sm-9">
                            <h4 class="blue">
                                <span class="middle">@Html.DisplayFor(Model => Model.FullName)</span>

                                <span class="label label-purple arrowed-in-right">
                                    <i class="ace-icon fa fa-circle smaller-80 align-middle"></i>
                                    online
                                </span>
                            </h4>

                            <div class="profile-user-info">
                                <div class="profile-info-row">
                                    <div class="profile-info-name"> User Name: </div>

                                    <div class="profile-info-value">
                                        <span>@Html.DisplayFor(Model => Model.UserName)</span>
                                    </div>
                                </div>

                                <div class="profile-info-row">
                                    <div class="profile-info-name"> Location </div>

                                    <div class="profile-info-value">
                                        <i class="fa fa-map-marker light-orange bigger-110"></i>
                                        <span>@Html.DisplayFor(Model => Model.Address)</span>
                                        
                                    </div>
                                </div>

                                <div class="profile-info-row">
                                    <div class="profile-info-name"> Age </div>

                                    <div class="profile-info-value">
                                        @{ 
                                            // Save today's date.
                                            var today = DateTime.Today;
                                            // Calculate the age.
                                            var age = today.Year - Model.DateOfBirth.Year;
                                            // Go back to the year the person was born in case of a leap year
                                            if (Model.DateOfBirth > today.AddYears(-age))
                                            {
                                                age--;
                                            }
                                        }
                                        <span>@age</span>
                                    </div>
                                </div>

                                <div class="profile-info-row">
                                    <div class="profile-info-name"> Joined </div>

                                    <div class="profile-info-value">
                                        <span>@Html.DisplayFor(Model => Model.CreateDate)</span>
                                    </div>
                                </div>

                                <div class="profile-info-row">
                                    <div class="profile-info-name"> Last Online </div>

                                    <div class="profile-info-value">
                                        <span>@Html.DisplayFor(Model => Model.LastLoginDate)</span>
                                    </div>
                                </div>
                            </div>

                            <div class="hr hr-8 dotted"></div>

                         
                        </div><!-- /.col -->
                    </div><!-- /.row -->

                    <div class="space-20"></div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="widget-box transparent">
                                <div class="widget-header widget-header-small">
                                    <h4 class="widget-title smaller">
                                        <i class="ace-icon fa fa-check-square-o bigger-110"></i>
                                        Little About Me
                                    </h4>
                                </div>

                                <div class="widget-body">
                                    <div class="widget-main">
                                        <p>
                                           @Html.DisplayFor(Model => Model.Description)
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- /#home -->

            
            </div>
        </div>
    </div>
    </div>
