                <li class="instagram"><a href="#"><i class="fa fa-instagram"></i></a></li>
            </ul>
        </div>
        <div class="right-bar">
            <ul class="contact">
                <li><i class="fa fa-phone"></i></li>
                <li><span>Call us</span></li>
                <li class="contact-info"><a href="#">+@AppHelpers.GetSetting("Hotline")</a></li>
            </ul>
            <ul class="mail">
                <li><i class="icon-email4"></i></li>
                <li><span>Send email</span></li>
                <li class="contact-info"><a href="mailto:@AppHelpers.GetSetting("Email")">+@AppHelpers.GetSetting("Email")</a></li>
            </ul>
            <ul class="login">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li><i class="icon-login"></i></li>
                    <li><span class="btn" data-toggle="modal" data-target="#myModal">Login</span> || <a href="@Url.Action("Register","Members")"><span> Register</span></a></li>
                }
                else
                {
                    @Html.Action("SidePanel", "Members")
                }
            </ul>
        </div>
    </div>
</div>
